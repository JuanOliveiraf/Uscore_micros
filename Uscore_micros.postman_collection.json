          }
        },
        {
          "name": "Get Profile",
          "request": {"method": "GET", "url": {"raw": "{{profileBase}}/api/profiles/{{userId}}", "host": ["{{profileBase}}"], "path": ["api", "profiles", "{{userId}}"]}}
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [{"key": "Content-Type", "value": "application/json"}],
