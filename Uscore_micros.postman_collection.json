              "mode": "raw",
              "raw": "{\n  \"user_id\": \"{{userId}}\",\n  \"name\": \"Jane Doe\",\n  \"favorite_teams\": [\"{{teamId}}\"],\n  \"favorite_competitions\": [\"{{competitionId}}\"]\n}",
              "options": {"raw": {"language": "json"}}
